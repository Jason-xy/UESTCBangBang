<!--pages/personal/personal.wxml-->
<scroll-view scroll-y class="scrollPage">
    <view class='UCenter-bg'>
        <view class="cu-avatar xl round margin-center" style="background-image:url(https://sdn.geekzu.org/avatar/7637a8d098b1f13fabb1bbac5dc29239?s=50&d=wavatar&r=g);"></view>
        <view class="text-xxl">
            <view class='text-xxl text-black'>Jason</view>
            <view class="cu-progress round margin-top-xxl ">
                <view class="bg-yellow" style="width:{{loading?'61.8%':''}};">
                    <text class='text-df'>Lv2</text>
                </view>
            </view>
        </view>
        <image class="gif-wave" src="https://raw.githubusercontent.com/weilanwl/ColorUI/master/demo/images/wave.gif" mode="scaleToFill" ></image>
    </view>

    <view class="padding flex text-center justify-center text-grey bg-white shadow-warp">
        <view class=".margin-sm padding-xl radius shadow-warp bg-white margin-top">
            <view class="flex flex-sub flex-direction solid-right">
                <view class="text-xxl text-orange">{{visitTotal}}</view>
                <view class="margin-top-sm">
                <text class="cuIcon-attentionfill"></text> View</view>
            </view>
        </view>
        <view class=".margin-sm padding-xl radius shadow-warp bg-white margin-top">
            <view class="flex flex-sub flex-direction solid-right">
                <view class="text-xxl text-blue">{{starCount}}</view>
                <view class="margin-top-sm">
                <text class="cuIcon-favorfill"></text> Star</view>
            </view>
        </view>
        <view class=".margin-sm padding-xl radius shadow-warp bg-white margin-top">
            <view class="flex flex-sub flex-direction">
                <view class="text-xxl text-green">{{FansTotal}}</view>
                <view class="margin-top-sm">
                <text class="cuIcon-subscription"></text> Fans</view>
            </view>
        </view>
    </view>

    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">

        <view class="cu-item arrow">
            <navigator class="content" url="/pages/activities/activities" hover-class="none">
            <image src="/icon/myrelease.png" class="png" mode="aspectFit"></image>
            <text class="text-grey">我发布的</text>
            </navigator>
        </view>

        <view class="cu-item arrow">
            <navigator class="content" url="/pages/activities/activities" hover-class="none">
            <image src="/icon/engage.png" class="png" mode="aspectFit"></image>
            <text class="text-grey">我参与的</text>
            </navigator>
        </view>

        <view class="cu-item arrow">
            <navigator class="content" url="/pages/activities/activities" hover-class="none">
            <image src="/icon/reward.png" class="png" mode="aspectFit"></image>
            <text class="text-grey">支持我们</text>
            </navigator>
        </view>

        <view class="cu-item arrow">
            <navigator class="content" url="/pages/activities/activities" hover-class="none">
            <image src="/icon/feedback.png" class="png" mode="aspectFit"></image>
            <text class="text-grey">意见反馈</text>
            </navigator>
        </view>
    </view>

    <view class="cu-timeline bg-gray">

            <view class="cu-time">昨天</view>

            <view class="cu-item text-green">
                <view class="content bg-green shadow-blur">
                    <text>23:22</text> 达成成就：初来乍到！
                </view>
            </view>

            <view class="cu-item text-red cuIcon-attentionforbidfill">
                <view class="content bg-red shadow-blur">
                    <text>22:10</text> 发布了第一件物品
                </view>
            </view>

            <view class="cu-item text-grey cuIcon-evaluate_fill">
                <view class="content bg-grey shadow-blur">
                    <text>20:30</text> 预约了第一个活动
                </view>
            </view>

            <view class="cu-item text-blue">
                <view class="bg-blue content">
                    <text>20:00</text> 终于有了自己的主页
                </view>
            </view>

            <view class="cu-item text-cyan">
                <view class="bg-cyan content">
                    <text>10:00</text> 第一次来到这里
                </view>
            </view>
    </view>
    
</scroll-view>